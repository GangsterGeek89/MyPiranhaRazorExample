@{
}
<div class="col-4">
    <div class="card">
        <img class="card-img-top" src="@Url.Content(WebApp.Api.Media.EnsureVersion((Guid)Model.Image.Id, 300))" alt="Card image">
        @Html.Raw(Model.Image.Media.Description)
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="card-text">@Model.Body</p>
        </div>
    </div>
</div>